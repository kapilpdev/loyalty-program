<table>
  <thead>
    <tr>
      <th scope="col">SNo</th>
      <th scope="col">Invoice Date</th>
      <th scope="col">Amount</th>
      <th scope="col">Foreign Country</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <th><%= invoice.id %></th>
        <td><%= invoice.invoice_date.strftime('%B %e, %Y') %></td>
        <td><%= number_to_currency(invoice.amount) %></td>
        <td><%= invoice.foreign_country ? 'Yes' : 'No' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
